---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-backgroundColor dark:bg-backgroundColor-dark">
    <slot />
  </body>
</html>

<style is:global>
  html {
    -webkit-tap-highlight-color: transparent;
  }
</style>
