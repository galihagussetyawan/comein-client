---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import OnlineAudienceComponent from "../../components/dashboard/audience/OnlineAudienceComponent.svelte";
import AudienceDemographicCountryComponent from "../../components/dashboard/audience/AudienceDemographicCountryComponent.svelte";
import AudienceDemographicCity from "../../components/dashboard/audience/AudienceDemographicCity.svelte";
import AudienceDemographicGeolocationList from "../../components/dashboard/audience/AudienceDemographicGeolocationList.svelte";
---

<DashboardLayout title="Audience | Dashboard">
  <div
    class="w-full max-h-[calc(100vh-10vh)] md:p-5 md:overflow-hidden md:overflow-y-auto"
  >
    <!-- online audience history -->
    <div>
      <p class="font-medium text-[1.2rem]">Online Audience History</p>
      <p class="font-light">
        Total number of the IG User's followers who were online during the last
        30 days.
      </p>
      <OnlineAudienceComponent
        API_BASE_URL={import.meta.env.API_BASE_URL}
        client:visible
      />
    </div>
    <!-- END - online audience history -->

    <!-- audience demographic geolocation -->
    <div class="md:my-10">
      <p class="font-medium text-[1.2rem]">
        Audience Demographic by geolocation
      </p>
      <p class="font-light">
        Review your audience demographics by Geolocation.
      </p>
      <p class="text-center text-[0.9rem] underline">
        Top 10 contries by audience demographic
      </p>
      <AudienceDemographicCountryComponent
        API_BASE_URL={import.meta.env.API_BASE_URL}
        client:visible
      />
      <p class="text-center text-[0.9rem] underline">
        Top 10 cities by audience demographic
      </p>
      <AudienceDemographicCity
        API_BASE_URL={import.meta.env.API_BASE_URL}
        client:visible
      />
      <AudienceDemographicGeolocationList client:visible />
    </div>
    <!-- END - audience demographic geolocation -->
  </div>
</DashboardLayout>
